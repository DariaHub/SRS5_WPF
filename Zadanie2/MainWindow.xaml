<Window x:Class="Zadanie2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical" Margin="30">
                <Label Content="Сумма кредита" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <StackPanel Orientation="Horizontal">
                    <Slider Name="Sl" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="298" ValueChanged="Sl_ValueChanged"/>
                    <Label Name="lb" Content="0" HorizontalAlignment="Left"  VerticalAlignment="Top" RenderTransformOrigin="-1.437,0.783"/>

                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="30">
            <Label Content="Заработная плата" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="tbx" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        </StackPanel>
        
        </StackPanel>



    </Grid>
</Window>
